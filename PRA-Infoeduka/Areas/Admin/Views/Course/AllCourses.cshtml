<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Courses</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-area="Admin" asp-controller="Course" asp-action="CreateCourse" class="btn btn-primary"><i class="bi bi-plus-circle"></i> &nbsp; New Course</a>
        </div>
    </div>
    <br /><br />
    <table id="tblCourses" class="table table-bordered table-striped" style="width: 100%">
        <thead>
            <tr>
                <th>Name</th>
                <th>ECTS</th>
                <th>Lectures</th>
                <th>Exercises</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts {
    <script src="~/js/Course.js"></script>
} 