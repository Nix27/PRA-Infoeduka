@model Course
<form method="post">
    <input asp-for="Id" hidden/>
    <div class="mt-4">
        <div class="row mb-2">
            <h2 class="text-primary">Edit course</h2>
        </div>
        <div class="row">
            <div class="mb-3 col-6">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control border border-1 border-dark" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3 col-6">
                <label asp-for="ECTS"></label>
                <input asp-for="ECTS" class="form-control border border-1 border-dark" />
                <span asp-validation-for="ECTS" class="text-danger"></span>
            </div>
            <div class="mb-3 col-6">
                <label asp-for="Lectures"></label>
                <input asp-for="Lectures" class="form-control border border-1 border-dark" />
                <span asp-validation-for="Lectures" class="text-danger"></span>
            </div>
            <div class="mb-3 col-6">
                <label asp-for="Exercises"></label>
                <input asp-for="Exercises" class="form-control border border-1 border-dark" />
                <span asp-validation-for="Exercises" class="text-danger"></span>
            </div>
        </div>
        <button type="submit" class="btn btn-dark" style="width:150px">Update</button>
        <a asp-area="Admin" asp-controller="Course" asp-action="AllCourses" class="btn btn-light" style="width:150px">Back</a>
    </div>
</form>
