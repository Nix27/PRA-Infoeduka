@model IEnumerable<Notification>

<div class="row pt-4">
    <div class="col-6">
        <h1 class="text-primary">Notifications</h1>
    </div>
    <div class="col-6 text-end">
        <a asp-area="Professor" asp-controller="Home" asp-action="CreateNotification" class="btn btn-primary"><i class="bi bi-plus-lg"></i> &nbsp; New notification</a>
    </div>
</div>

<div class="container p-2">
    <div class="row pb-3">
        @foreach (var notification in Model)
        {
            <div class="col-lg-3 col-md-6 col-xs-1">
                <div class="row p-2">
                    <div class="col-12 p-1" style="border: 1px solid black; border-radius: 5px">
                        <div class="card" style="height:300px">
                            <h5 class="card-header py-3">@notification.Course.Name - @notification.Title</h5>
                            <div class="card-body d-flex justify-content-between flex-column">
                                <div class="pl-1">
                                    <p class="card-title  text-primary">@notification.Description</p>
                                </div>
                                <a asp-action="ShowMore" asp-route-id="@notification.Id" style="text-decoration:none">More...</a>
                            </div>
                            <div class="card-footer">
                                <div class="d-flex justify-content-between">
                                    <span>@notification.User.FirstName  @notification.User.LastName</span>
                                    <span>@notification.PublishedDate</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>