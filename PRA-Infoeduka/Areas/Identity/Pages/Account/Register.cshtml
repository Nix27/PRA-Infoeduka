@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
<form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="mt-4">
        <div class="row mb-2">
            <h2 class="text-primary">New professor</h2>
        </div>
        <div class="row">
            <div class="mb-3 col-6">
                <label asp-for="Input.FirstName"></label>
                <input asp-for="Input.FirstName" class="form-control border border-1 border-dark" />
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="mb-3 col-6">
                <label asp-for="Input.LastName"></label>
                <input asp-for="Input.LastName" class="form-control border border-1 border-dark" />
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
            <div class="mb-3 col-6">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control border border-1 border-dark" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="mb-3 col-6">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control border border-1 border-dark" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="mb-3 col-6">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control border border-1 border-dark" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
        </div>
    </div>
    <button id="registerSubmit" type="submit" class="btn btn-dark" style="width:150px">Add</button>
    <a asp-area="Admin" asp-controller="Professor" asp-action="AllProfessors" class="btn btn-light" style="width:150px">Back</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
